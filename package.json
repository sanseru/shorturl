{
  "name": "shorturl",
  "version": "1.0.0",
  "description": "Secure URL shortener with SQLite and Bootstrap UI",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "setup": "node setup.js",
    "generate-password": "node generate-password.js",
    "setup-with-password": "node setup.js --generate-password",
    "pm2:start": "pm2 start ecosystem.config.json",
    "pm2:dev": "pm2 start ecosystem.config.json --env development",
    "pm2:prod": "pm2 start ecosystem.config.json --env production",
    "pm2:stop": "pm2 stop shorturl",
    "pm2:restart": "pm2 restart shorturl",
    "pm2:delete": "pm2 delete shorturl",
    "pm2:logs": "pm2 logs shorturl",
    "pm2:monit": "pm2 monit",
    "logs:create": "mkdir -p logs",
    "config": "node show-config.js",
    "startup:linux": "chmod +x start-linux.sh && ./start-linux.sh",
    "startup:windows": "start-windows.bat",
    "cleanup:linux": "chmod +x stop-all.sh && ./stop-all.sh", 
    "cleanup:windows": "stop-all.bat",
    "pm2:cleanup": "pm2 delete shorturl || echo 'No process to delete'"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "bootstrap": "^5.3.8",
    "cookie-parser": "^1.4.6",
    "csurf": "^1.11.0",
    "dotenv": "^17.2.2",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-session": "^1.18.2",
    "helmet": "^7.0.0",
    "node-cron": "^3.0.2",
    "sql.js": "^1.8.0"
  },
  "devDependencies": {
    "pm2": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
