{
  "apps": [
    {
      "name": "shorturl",
      "script": "server.js",
      "instances": "max",
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "development"
      },
      "env_production": {
        "NODE_ENV": "production"
      },
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "error_file": "./logs/err.log",
      "out_file": "./logs/out.log",
      "log_file": "./logs/combined.log",
      "time": true,
      "autorestart": true,
      "max_restarts": 10,
      "min_uptime": "10s",
      "max_memory_restart": "1G",
      "watch": false,
      "ignore_watch": [
        "node_modules",
        "logs",
        "data"
      ],
      "merge_logs": true,
      "cron_restart": "0 2 * * *",
      "kill_timeout": 5000
    }
  ]
}
